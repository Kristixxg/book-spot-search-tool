    <div class="mt-3">
    {{#each books as |book|}}
    <div class="container-fluid col-12 d-flex">
        <div class="container-fluid col-3 mb-3">
            <a>
            <img class="img-fluid w-100 border rounded" src="{{book.volumeInfo.imageLinks.thumbnail}}">
            <a>
        </div>
        <div class="container-fluid col-9 border mb-3 rounded bg-light">
            <p>Title: {{book.volumeInfo.title}}</p>
            <hr class="dropdown-divider">
            <p>Author: {{book.volumeInfo.authors}}</p>
            <hr class="dropdown-divider">
            <p>Description: {{book.volumeInfo.description}}</p>
        </div>
    </div>
    {{/each}}
    </div>