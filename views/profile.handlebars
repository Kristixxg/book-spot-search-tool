<h1>My saved books:</h1>
{{#if user.books}}
{{#each user.books as |book|}}
<div id="custom-height" class="container-fluid col-12 d-flex">
    <div class="col-3 container">
        <p class="text-center">{{book.title}}</p>
        <img id="{{book.id}}" class="img-fluid w-100 mb-3" src="{{book.image}}" alt="">
        <button data="{{book.id}}" id="unsaveBtn">Unsave</button>
        <button id="reviewBtn">Review</button>
    </div>
    <form id="commentForm" style="display: none;">
        <div id="reviewBox" class="mb-3">
            <label for="review" class="form-label">Review</label>
            <input name="input" type="text" class="form-control" id="reviewText" aria-describedby="reviewText">
        </div>
        <button data="{{book.id}}" id="submitReview" type="submit" class="btn bg-custom">Submit</button>
        <button id="upvote" data="{{book.id}}" data-value="{{book.upvote}}" type="click" class="btn bg-custom font-weight-bold">ðŸ¡¹</button>
        <button id="downvote" data="{{book.id}}" data-value="{{book.downvote}}" type="click" class="btn bg-custom font-weight-bold">ðŸ¡»</button> 
        <p id="displayText"></p>
    </form>
    <div class="col-9 bg-light mb-3 bolder scroll">
    {{#each book.reviews as |rev|}}
    <p>{{rev.review}}</p>
    <button data="{{rev.id}}" id="editBtn">edit</button>
    <button data="{{rev.id}}" id="delBtn">delete</button>
    {{/each}}
    </div>
</div>
{{/each}}
{{else}}
<a href="/">You must save a book first to view this page</a>
{{/if}}
<script src="js/topbar/topbar.js"></script>
<script src="/js/unsaveBook.js"></script>
<script src="/js/profile.js"></script>