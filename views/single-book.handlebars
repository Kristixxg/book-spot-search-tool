<p id="hide" style="display: none;">{{book.volumeInfo.imageLinks.smallThumbnail}}</p>

<div class="container col-12 d-flex">
    <div class="col-5 container">
        <img id="{{book.id}}" class="img-fluid w-100 mb-3" src="{{book.volumeInfo.imageLinks.smallThumbnail}}" alt="pic">
        
    </div>
    <div class="col-7 container">
        <p id="title">{{book.volumeInfo.title}}</p>
        <p id="author">{{book.volumeInfo.authors}}</p>
        <p id="description" class="single-book-des">{{book.volumeInfo.description}}</p>
        <p>{{book.volumeInfo.publishedDate}}</p>
        <button id="saveBtn" class="button-55" >Save Book</button>
    </div>
</div>

<script src="js/topbar/topbar.js"></script>
<script src="/js/bookdash.js"></script>